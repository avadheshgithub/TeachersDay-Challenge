// Number Of Good Pairs
// Leetcode 1512

class Solution {
public:
    int numIdenticalPairs(vector<int>& nums) {
        unordered_map<int,int>mp;
        for(auto x:nums){
            mp[x]++;
        }

        int count = 0;
        for(auto x:mp){
            int n = x.second;
            count += n*(n-1)/2;
        }
        return count;
    }
};
